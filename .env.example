# Telegram API credentials (my.telegram.org)
TG_API_ID=
TG_API_HASH=

# Seu telefone no formato internacional, ex: +5534999768872
TG_PHONE=

# Um ou mais alvos (separe por vírgula). Pode ser:
# - nome do grupo (título)
# - @username
# - id numérico (ex: -100123...)
TG_TARGETS=

# Regras
LATAM_THRESHOLD_PER_CPF=50000
SMILES_THRESHOLD_PER_CPF=60000

# Respostas exatas
LATAM_REPLY=25,00
SMILES_REPLY=15,50

# Limites por programa (milhas totais na mensagem)
SMILES_MAX_MILES=113700
LATAM_MAX_MILES=800000

# Segurança
# DRY_RUN=1 => nunca envia (somente loga). --send sobrescreve.
DRY_RUN=1

# Notificação via Telegram (ex.: "me" para Saved Messages, ou @username, ou ID numérico)
TG_NOTIFY_TARGET=me

# Delay antes de enviar (segundos)
SEND_DELAY_SECONDS=2

# Relay para WhatsApp via JSONL (gera whatsapp-events.jsonl para o OpenClaw encaminhar)
WHATSAPP_RELAY=1

# Notificação direta via WhatsApp (CallMeBot - gratuito)
# Setup: salve +34 644 43 79 49 no WhatsApp e envie: I allow callmebot to send me messages
# Eles respondem com seu API key. Preencha abaixo para ativar.
WHATSAPP_NOTIFY_PHONE=
WHATSAPP_CALLMEBOT_APIKEY=

# Notificação push via ntfy.sh (gratuito, Android/iOS, sem conta)
# Setup: instale o app ntfy, assine o tópico abaixo, e preencha NTFY_TOPIC.
# Escolha um nome único (ex: milhas-seunome-1234) para evitar colisão com outros usuários.
NTFY_TOPIC=
